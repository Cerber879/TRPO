@startuml Система поиска и рекомендаций ресторанов - Контекстная диаграмма
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Система поиска и рекомендаций ресторанов - Контекстная диаграмма

Person(посетитель, "Посетитель", "Ищет рестораны, просматривает карточки, оставляет отзывы и оценки")
Person(владелец, "Владелец ресторана", "Управляет карточкой ресторана, обновляет меню и фото, анализирует статистику")
Person(модератор, "Модератор", "Проверяет контент, обрабатывает жалобы, модерирует отзывы")
Person(рекламодатель, "Рекламодатель", "Создает и управляет рекламными кампаниями, анализирует эффективность")

System(рестораны_система, "Система поиска и рекомендаций ресторанов", "Обеспечивает поиск ресторанов, рекомендации, управление отзывами, рекламу и аналитику")

System_Ext(yandex_maps, "Yandex Maps API", "Картографический сервис для отображения ресторанов, геокодирования и построения маршрутов")
System_Ext(oauth_providers, "OAuth провайдеры", "Google, Facebook для социальной аутентификации")

Rel(посетитель, рестораны_система, "Ищет рестораны, просматривает карточки, оставляет отзывы", "HTTPS")
Rel(владелец, рестораны_система, "Управляет рестораном, просматривает аналитику", "HTTPS")
Rel(модератор, рестораны_система, "Модерирует контент, обрабатывает жалобы", "HTTPS")
Rel(рекламодатель, рестораны_система, "Создает рекламные кампании, анализирует эффективность", "HTTPS")

Rel(рестораны_система, yandex_maps, "Получает карты, геокодирует адреса, строит маршруты", "HTTPS")
Rel(рестораны_система, oauth_providers, "Аутентификация через социальные сети", "OAuth 2.0")

@enduml

